# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/eli_pizza_picker?schema=public"

# JWT
JWT_SECRET="REPLACE_WITH_SECURE_RANDOM_STRING"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Netsapiens SMS API
NETSAPIENS_API_URL="your-url"
NETSAPIENS_DOMAIN="your-domain"
NETSAPIENS_USER="your-user"
NETSAPIENS_API_KEY="your-api-key"

# SMTP2GO Email (API Key method)
SMTP2GO_API_KEY="your-smtp2go-api-key"
SMTP_FROM="noreply@elispizzapicker.com"

# App
APP_URL="https://elispizzapicker.com"

# Google Maps (for Find Pizza Places feature)
VITE_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Push Notifications (VAPID keys)
# Generate with: ./deploy.sh --generate-vapid
# Or: npx web-push generate-vapid-keys
VAPID_PUBLIC_KEY=""
VAPID_PRIVATE_KEY=""
VAPID_CONTACT_EMAIL="admin@example.com"
